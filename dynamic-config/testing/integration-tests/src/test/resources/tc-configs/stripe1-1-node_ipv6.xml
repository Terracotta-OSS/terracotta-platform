<tc-config xmlns="http://www.terracotta.org/config"
           xmlns:ohr="http://www.terracotta.org/config/offheap-resource"
           xmlns:data="http://www.terracottatech.com/config/data-roots"
>
  <plugins>
    <config>
      <ohr:offheap-resources>
        <ohr:resource name="main" unit="MB">512</ohr:resource>
      </ohr:offheap-resources>
    </config>
    <config>
      <data:data-directories>
        <data:directory name="data" use-for-platform="true">${WORKING-DIR}/metadata/stripe1</data:directory>
      </data:data-directories>
    </config>
  </plugins>
  <servers>
    <server host="::1" name="node-1-1" bind="::">
      <logs>${WORKING-DIR}/logs</logs>
      <tsa-port bind="::">${PORT-1}</tsa-port>
      <tsa-group-port bind="::">${GROUP-PORT-1}</tsa-group-port>
    </server>
    <client-reconnect-window>120</client-reconnect-window>
  </servers>
  <failover-priority>
    <availability/>
  </failover-priority>
</tc-config>